<%- include('partials/header'); -%>

<main class="container mt-5">
    <h1 class="text-center mb-3"><strong>Edit Item</strong></h1>
    <form action="/admin/edit/<%= item._id %>" method="POST" id="edit">
        <div class="mb-3">
            <label for="picture" class="form-label">Picture Link:</label>
            <input type="text" class="form-control" id="picture" name="picture" value="<%= item.picture %>" required>
        </div>
        <div class="mb-3">
            <label for="nameEN" class="form-label">Name:</label>
            <input type="text" class="form-control" id="nameEN" name="nameEN" value="<%= item.nameEN %>" required>
        </div>
        <div class="mb-3">
            <label for="descriptionEN" class="form-label">Description:</label>
            <textarea class="form-control" id="descriptionEN" name="descriptionEN" rows="3" required><%= item.descriptionEN %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</main>

<%- include('partials/footer'); -%>
